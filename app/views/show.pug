extends layout

block content
  
  h1 (class="bayside-header display-4 pt-4") Bayside Blog
    <p class="bayside-header-explanation pt-4 pb-4 lead">The place to post great music (and artist) recommendations regardless of genre or release date.</p>
  </div>
  <table class="table table-striped">
    <thead>
      <% posts.forEach(function(post){ %>
    </thead>
    <hr class="post-separator">
    <tbody>
      <tr>
          <div class="lead post-title"><%= post.title %></div>
          <br>
          <div class="lead"><%= post.body %></div>
          <br>
          <a href="/posts/edit/<%= post.id %>" class="btn btn-custom">Edit</a>
          <form class="d-inline pl-3" action="/posts/delete/<%= post.id %>" method="post">
            <input type="submit" value="Delete" class="btn btn-custom">
          </form>
      </tr>
      <% }) %>
    </tbody>
    <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/78037278&amp;color=ff0083&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
  </table>
