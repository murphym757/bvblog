//- login.pug
extends layout

block content
  div(class="post container")
    h2(class="lead post-title display-4 pb-4") Log In
    form(method="POST" action="/login")
      div(class="form-group pt-2 pb-3")
        label(for="email") E-Mail
        input.form-control(type="text" id="email" placeholder="E-Mail" name="email")
      div(class="form-group pt-2 pb-3")
        label(for="password") Password
        input.form-control(type="password" id="password" placeholder="Password" name="password")
        div(class="submit-button pb-3")
        button.btn.btn-primary(type="submit") Log In
